<div class="banner">
  <div class="container">
    <h1> <%= @company.company_name %></h1>
    <%= cl_image_tag @company.photo.key, class: "company_card_img" %>
    <p> <%= @company.type_of_company %></p>
  </div>
</div>

<div class="company-description">
  <p><%= @company.company_description %></p>
  <%= @gender_rating.average_rating %>
  <%= @gender_rating.c_rating %>
  <%= @gender_rating.mid_rating %>
  <%= @gender_rating.junior_rating  %>
</div>


<%= link_to 'Delete',
                    company_path(@company),
                    method: :delete,
                    class: "btn btn-danger",
                    data: { confirm: "Delete '#{@company.company_name}'?"} %>
  <%= link_to "Edit", edit_company_path, class: "btn btn-secondary" %>
