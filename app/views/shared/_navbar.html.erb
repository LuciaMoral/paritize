<div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-wagon-fixed">
  <div class="container-fluid">
     <%= link_to root_path, class:"text-decoration-none" do  %>
      <span id="title"> PARITIZE </span>
    <% end %>
      <%= link_to "About us", about_path, class: "btn btn-light" %>
      <%= link_to "View best companies", companies_path, class: "btn btn-light" %>
       <%= link_to "Registrer your company", new_company_path, class: "btn btn-light" %>


    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <i class="fas fa-search" id="search"
        data-controller="click-search"
        data-click-search-target="search"
        data-action="click->click-search#handleClick"></i>
       <%= simple_form_for :search, url: companies_path, method: "GET", html: { class: 'form-inline d-none', id: 'search-form', data_click_search_target: "form" } do |f| %>
          <%= f.input :company_name, label: false, input_html: {placeholder:  "Search a company"} %>
          <%# <%= f.submit "Search" %>
      <% end %>

      <ul class="navbar-nav me-auto">

        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <%= image_tag("abstract-492.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false) %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", edit_user_registration_path(current_user), class: "dropdown-item" %>
              <%= link_to "Edit my company", edit_company_path(current_user), class: "dropdown-item" %>
              <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
