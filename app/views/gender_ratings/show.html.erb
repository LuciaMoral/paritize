<div class="container">
  <div class ="company-details">
  <h1>Here is your overall diversity score</h1>
  <div class="total">
  <% if @gender_rating.average_rating >= 50 %>
    <div class="circle-green rating-round">
    <%= @gender_rating.average_rating.round(2)%>
    %
    </div>
  <% elsif @gender_rating.average_rating <= 29 %>
    <div class="circle-red rating-round">
    <%= @gender_rating.average_rating.round(2)%>
    %
    </div>
  <% else @gender_rating.average_rating %>
    <div class="circle-orange rating-round">
    <%= @gender_rating.average_rating.round(2)%>
    %
    </div>
  <% end %>
  </div>
    <div class="breakdown">
    <p class="ratings-title">Here is a breakdown of your score by level</p>
  <div class="ratings-grid mt-5 mb-3">

    <div class="ratings-card ">
    <h2> C-Level and Board </h2>
  <% if @gender_rating.c_rating >= 50 %>
    <div class="circle-green rating-round">
    <%= @gender_rating.c_rating%>
    </div>
  <% elsif @gender_rating.c_rating <= 29 %>
   <div class="circle-red rating-round">
   <%= @gender_rating.c_rating%>
   </div>
  <% else @gender_rating.c_rating %>
    <div class="circle-orange rating-round">
    <%= @gender_rating.c_rating%>
    </div>
  <% end %>
  </div>

    <div class="ratings-card">
    <h2> Mid and Senior Level </h2>
  <% if @gender_rating.mid_rating >= 50 %>
    <div class="circle-green rating-round">
    <%= @gender_rating.mid_rating%>
    </div>
  <% elsif @gender_rating.mid_rating <= 29 %>
    <div class="circle-red rating-round">
    <%= @gender_rating.mid_rating%>
    </div>
  <% else @gender_rating.mid_rating %>
    <div class="circle-orange rating-round">
    <%= @gender_rating.mid_rating%>
    </div>
  <% end %>
  </div>

    <div class="ratings-card">
    <h2>Junior Level </h2>
  <% if @gender_rating.junior_rating >= 50 %>
    <div class="circle-green rating-round">
    <%= @gender_rating.junior_rating%>
    </div>
  <% elsif @gender_rating.junior_rating <= 29 %>
    <div class="circle-red rating-round">
    <%= @gender_rating.junior_rating%>
    </div>
  <% else @gender_rating.junior_rating %>
    <div class="circle-orange rating-round">
    <%= @gender_rating.junior_rating%>
    </div>
  <% end %>
  </div>

  </div>

  </div>
</div>
</div>
